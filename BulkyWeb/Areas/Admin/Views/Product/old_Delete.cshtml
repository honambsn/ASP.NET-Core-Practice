@using Bulky.Models
 @model Product



<div class="card shadow border my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">


                @* <div class="mb-3 row p-1"> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2">Title</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Description</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="Author" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2">Author</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">List Price</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2">Price50</label>
                    
                </div>

                <div class="form-floating py-2 col-12">
                    @* <label asp-for="DisplayOrder" class="pb-0">Display Order</label> *@
                    <input asp-for="Price100" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2">Price100</label>
                    
                </div>

                <div class="row mt-5">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* <h1>Delete Product</h1> *@



<style>
    .alert-danger:empty {
        display: none;
    }
</style>
