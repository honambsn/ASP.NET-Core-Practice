    .modal {
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.0);
        opacity: 0;
        transition: background-color 0.3s ease, opacity 0.3s ease;
        pointer-events: none;
    }

    .modal.show {
        background-color: rgba(0, 0, 0, 0.8);
        opacity: 1;
        pointer-events: auto;
    }

    .modal-content {
        max-height: 90vh;
        max-width: auto;
        height: auto;
        width: auto;
        border-radius: 10px;
        transform: scale(0.8);
        transition: transform 0.3s ease, opacity 0.3s ease;
        opacity: 0;
        object-fit: contain;
    }

    .modal.show .modal-content {
        transform: scale(1);
        opacity: 1;
    }

    .close {
        position: absolute;
        top: 20px;
        right: 40px;
        color: white;
        font-size: 40px;
        cursor: pointer;
    }


</style>


