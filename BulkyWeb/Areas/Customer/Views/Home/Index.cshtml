 @model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="width: 100%; aspect-ratio:1; height: auto; object-fit: cover; overflow:hidden;" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center nb-0">
                                    List Price:
                                    <span class="text-decoration-line-through" style="color: red !important; font-weight: bold;">
                                        @product.ListPrice.ToString("c", CultureInfo.GetCultureInfo("en-US"))</span>
                                    </p>    
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">As low as:
                                    <span style="color: orange !important; font-weight: bold;">@product.Price100.ToString("c", CultureInfo.GetCultureInfo("en-US"))</span>
                                </p>
                            </div>
                        </div>
                        <div class="details-btn">
                            <a asp-action="Details" asp-route-productId="@product.ID" 
                            class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card,
    .details-btn{
        transition: transform 0.5s ease, box-shadow 0.3s ease, all 0.3s ease-in-out, z-index 0.3s ease;
    }

    .card:hover{
        transform: scale(1.2);
        cursor: pointer;
        z-index: 1000;
    }


    .details-btn:hover{
        transform: scale(1.05);
        cursor: pointer;
    }
</style>